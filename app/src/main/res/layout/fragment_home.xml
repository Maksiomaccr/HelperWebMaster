<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:background="@color/background"
    tools:ignore="SpeakableTextPresentCheck"
    android:id="@+id/scroll">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".screen.Home">



        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="53dp"
            android:layout_height="50dp"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/buttondirect"
            app:srcCompat="@drawable/darkpath2" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="42dp"
            android:layout_height="43dp"
            android:layout_marginEnd="32dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/HorizontalScrollView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textView"
            app:srcCompat="@drawable/darkpath1" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="61dp"
            android:layout_marginTop="460dp"
            android:orientation="vertical"
            android:gravity="end"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="55dp"
                android:layout_height="60dp"
                android:layout_marginEnd="-23dp"
                app:srcCompat="@drawable/darkpath2" />

        </LinearLayout>


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="62dp"
            android:layout_height="65dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="32dp"
            app:layout_constraintBottom_toTopOf="@+id/sprav"
            app:layout_constraintEnd_toStartOf="@+id/HorizontalScrollView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:srcCompat="@drawable/darkpath1" />

        <TextView
            android:id="@+id/sprav"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/montserrat_alternates"
            android:shadowColor="#090909"
            android:text="Справочник"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/HorizontalScrollView" />


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/montserrat_alternates"
            android:shadowColor="#090909"
            android:text="Курсы"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout3" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:background="@drawable/darkheader"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </LinearLayout>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="336dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:shadowColor="#000000"
            android:text="Твой помощник в"
            android:textColor="#FFFFFF"
            android:textSize="34sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="81dp"
            android:layout_marginStart="16dp"
            android:text="веб\nдизайне"
            android:textColor="#FFFFFF"
            android:textSize="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

        <Button
            android:id="@+id/buttondirect"
            android:layout_width="181dp"
            android:layout_height="130dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/spravhtml"
            android:contentDescription="TODO"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="bottom|center"
            android:text="html"
            android:textAllCaps="false"
            android:textColor="@color/ever_white"
            android:textSize="20dp"
            app:layout_constraintEnd_toStartOf="@+id/buttondirectcss"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sprav"
            tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/buttondirectcss"
            android:layout_width="181dp"
            android:layout_height="130dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/spravcss"
            android:contentDescription="TODO"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="bottom|center"
            android:text="css"
            android:textAllCaps="false"
            android:textColor="@color/ever_white"
            android:textSize="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/buttondirect"
            app:layout_constraintTop_toBottomOf="@+id/sprav"
            tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck" />

        <HorizontalScrollView
            android:id="@+id/HorizontalScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <Button
                    android:id="@+id/designCource"
                    android:layout_width="181dp"
                    android:layout_height="130dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/designdark"
                    android:contentDescription="TODO"
                    android:fontFamily="@font/montserrat_alternates"
                    android:gravity="bottom|center"
                    android:text="Веб-дизайн"
                    android:textAllCaps="false"
                    android:textColor="@color/ever_white"
                    android:tint="?attr/colorControlNormal"
                    android:textSize="20dp"
                    tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/htmlCource"
                    android:layout_width="181dp"
                    android:layout_height="130dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/htmldark"
                    android:contentDescription="TODO"
                    android:fontFamily="@font/montserrat_alternates"
                    android:gravity="bottom|center"
                    android:text="html"
                    android:textAllCaps="false"
                    android:textColor="@color/ever_white"

                    android:textSize="20dp"
                    tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck" />

                <Button
                    android:id="@+id/cssCource"
                    android:layout_width="181dp"
                    android:layout_height="130dp"
                    android:layout_margin="4dp"
                    android:layout_weight="1"
                    android:background="@drawable/cssdark"
                    android:contentDescription="TODO"
                    android:fontFamily="@font/montserrat_alternates"
                    android:gravity="bottom|center"
                    android:text="css"
                    android:textAllCaps="false"
                    android:textColor="@color/ever_white"

                    android:textSize="20dp"
                    tools:ignore="ContentDescription,HardcodedText,SpeakableTextPresentCheck" />



            </LinearLayout>
        </HorizontalScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>