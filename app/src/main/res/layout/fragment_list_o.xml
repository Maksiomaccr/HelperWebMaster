<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_view"
    tools:context=".ListO">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ExtraText">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:text="Списки определний\n"
                android:textColor="@color/black"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates"
                android:paddingStart="10dp"
                android:text="\tСписки определений создаются с помощью элемента &lt;dl&gt;. Для добавления термина применяется элемент &lt;dt&gt;, а для вставки определения — элемент &lt;dd&gt;."
                android:textColor="@color/black"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/tv3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates"
                android:paddingStart="10dp"
                android:text="\tДля элементов &lt;dl&gt;, &lt;dt&gt; и &lt;dd&gt; доступны глобальные атрибуты."
                android:textColor="@color/black"
                android:textSize="18dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/tv4"
                android:fontFamily="@font/lucidaconsole"
                android:drawableRight="@drawable/click"
                android:background="@drawable/console_style"
                android:paddingStart="10dp"
                android:text="\t&lt;dl&gt;\n\t &lt;dt&gt;Программисты:&lt;/dt&gt;\n\t  &lt;dd&gt;Василий Терешков&lt;/dd&gt;\n\t  &lt;dd&gt;Александр Сеченов&lt;/dd&gt;\n\t  &lt;dd&gt;Роман Петров&lt;/dd&gt;\n\t &lt;dt&gt;Гейм-дизайнер:&lt;/dt&gt;\n\t  &lt;dd&gt;Андрей романов&lt;/dd&gt;\n\t&lt;/dl&gt;"
                android:textColor="@color/ever_white"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/buttonnext4"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text=" Дальше "
                android:textColor="@color/ever_white"
                android:fontFamily="@font/montserrat_alternates"
                android:textAllCaps="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:id="@+id/buttonback4"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:text=" Назад "
                android:textColor="@color/ever_white"
                android:fontFamily="@font/montserrat_alternates"
                android:textAllCaps="false"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
        </LinearLayout>



</ScrollView>