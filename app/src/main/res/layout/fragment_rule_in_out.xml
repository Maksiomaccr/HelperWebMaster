<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_view"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Design.RuleInOut">





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="Правило внутреннего и внешнего"
            android:textColor="@color/black"
            android:textSize="30dp" />





        <TextView
            android:id="@+id/tv3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_alternates"
            android:padding="10dp"
            android:text="\tОбъекты, которые находятся в непосредственной близости считаются родственными. Это одна из самых важных основ группировки контента на сайте."
            android:textColor="@color/black"
            android:textSize="18dp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/rule1"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/rule2"
            android:layout_gravity="center"/>
        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:background="@drawable/rule3"
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"/>


        <Button
            android:id="@+id/buttonnext"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:fontFamily="@font/montserrat_alternates"
            android:onClick="ChangeFragment"
            android:text=" Дальше "
            android:textAllCaps="false"
            android:textColor="@color/ever_white" />


        <View
            android:layout_width="match_parent"
            android:layout_height="30dp" />
    </LinearLayout>



</ScrollView>