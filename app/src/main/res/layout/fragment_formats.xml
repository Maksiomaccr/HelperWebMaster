<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_corner_view"
    tools:context=".Formats">


        <RelativeLayout
            android:id="@+id/parent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/montserrat_alternates"
                android:gravity="center"
                android:text="Форматы графических файлов"
                android:textColor="@color/black"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/image"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/formats"
                android:layout_below="@id/title"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:id="@+id/tv2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/montserrat_alternates"
                android:padding="10dp"
                android:text="\tФормат графического файла — это способ записи графических данных. Любой элемент, который вы видите на сайте, в интерфейсе приложения или в скачанном документе, представляет собой файл определенного формата."
                android:textColor="@color/black"
                android:textSize="18dp"
                android:layout_below="@id/image"
                android:layout_marginBottom="20dp"/>
            <ImageView
                android:id="@+id/tap"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="10dp"
                android:layout_below="@id/tv2"
                android:layout_alignParentRight="true"
                android:background="@drawable/tap"/>

            <FrameLayout
                android:id="@+id/videoview"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/tap">
                <VideoView
                    android:id="@+id/video"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </FrameLayout>





            <Button
                android:id="@+id/buttonend"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:background="@drawable/button"
                android:fontFamily="@font/montserrat_alternates"
                android:text=" Завершить "
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/ever_white"
                android:layout_below="@id/videoview"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/buttonback3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button"
                android:fontFamily="@font/montserrat_alternates"
                android:text="Назад"
                android:layout_marginBottom="20dp"
                android:layout_below="@id/buttonend"
                android:textColor="@color/ever_white"
                android:textAllCaps="false" />
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"/>
        </RelativeLayout>



</ScrollView>