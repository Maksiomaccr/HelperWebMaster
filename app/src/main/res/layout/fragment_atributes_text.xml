<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_corner_view"
    tools:context=".AtributesText">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="ExtraText">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/montserrat_alternates"
            android:gravity="center"
            android:text="Атрибуты текста\n"
            android:textColor="@color/black"
            android:textSize="30dp" />


        <TextView
            android:layout_below="@id/title"
            android:id="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/montserrat_alternates"
            android:paddingStart="10dp"
            android:text="\tВместо того, чтобы прописывать стили в отдельном CSS файле, можно пользоваться атрибутами внутри тэгов."
            android:textColor="@color/black"
            android:textSize="18dp"
            android:layout_marginBottom="20dp"/>
        <ImageView
            android:id="@+id/tap"
            android:layout_below="@id/tv2"
            android:layout_alignParentEnd="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/tap"/>
        <FrameLayout
            android:id="@+id/videoview"
            android:layout_below="@id/tap"
            android:layout_width="match_parent"
            android:layout_height="300dp">
            <VideoView
                android:id="@+id/video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </FrameLayout>




        <Button
            android:layout_below="@id/videoview"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:id="@+id/buttonnext7"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/button"
            android:fontFamily="@font/montserrat_alternates"
            android:text=" Дальше "
            android:textAllCaps="false"
            android:textColor="@color/ever_white" />



        <Button
        android:layout_below="@id/buttonnext7"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:id="@+id/buttonback6"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:background="@drawable/button"
            android:fontFamily="@font/montserrat_alternates"
            android:text=" Назад "
            android:textAllCaps="false"
            android:textColor="@color/ever_white" />


    </RelativeLayout>


</ScrollView>