<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CSS.CSSBase">

    <TextView
        android:id="@+id/CSSTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple"
        android:fontFamily="@font/montserrat_alternates"
        android:gravity="center"
        android:paddingTop="5dp"
        android:text="Основы CSS"
        android:textColor="@color/ever_white"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />


    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:background="@null"
        android:minHeight="48dp"
        app:layout_constraintBottom_toBottomOf="@+id/CSSTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/buttonback"
        tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />


    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/CSSTitle">

        <TextView
            android:id="@+id/point1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/style_points" />

        <TextView
            android:id="@+id/point22"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/style_points" />

        <TextView
            android:id="@+id/point3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/style_points" />

        <TextView
            android:id="@+id/point4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/style_points" />

        <TextView
            android:id="@+id/point5"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="10dp"
            android:background="@drawable/style_points" />


    </LinearLayout>


    <FrameLayout
        android:id="@+id/fr_placeCSS"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">


    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>